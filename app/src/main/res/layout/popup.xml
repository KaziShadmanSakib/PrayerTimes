<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@color/SlateGray">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">

        <CheckedTextView
            android:id="@+id/checkedTextview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkedTextview2"
            android:layout_marginTop="32dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:gravity="center"
            android:text="    Fajr"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <CheckedTextView
            android:id="@+id/checkedTextview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkedTextview3"
            android:layout_marginTop="35dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"

            android:gravity="center"
            android:text="   Dhuhr"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/checkedTextview1"
            tools:layout_editor_absoluteX="0dp" />

        <CheckedTextView
            android:id="@+id/checkedTextview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkedTextview4"
            android:layout_marginTop="35dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:gravity="center"
            android:text="   Asar"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/checkedTextview2"
            tools:layout_editor_absoluteX="0dp" />

        <CheckedTextView
            android:id="@+id/checkedTextview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkedTextview5"
            android:layout_marginTop="35dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:gravity="center"
            android:text="   Magrib"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/checkedTextview3"
            tools:layout_editor_absoluteX="0dp" />

        <CheckedTextView
            android:id="@+id/checkedTextview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="35dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:gravity="center"
            android:text="   Isha"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/checkedTextview4"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>